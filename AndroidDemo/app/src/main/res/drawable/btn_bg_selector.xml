<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">            <!-- 填充颜色 -->
            <solid android:color="@android:color/transparent" />            <!-- 线的宽度，颜色 -->
            <stroke android:width="1dp" android:color="#00bbff" />            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">            <!-- 填充颜色 -->
            <solid android:color="@android:color/transparent" />            <!-- 线的宽度，颜色 -->
            <stroke android:width="1dp" android:color="#00bbff" />            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">            <!-- 填充颜色 -->
            <solid android:color="@android:color/transparent" />            <!-- 线的宽度，颜色 -->
            <stroke android:width="1dp" android:color="#ffffff" />            <!-- 矩形的圆角半径 -->
            <corners android:radius="5dp" />
        </shape>
    </item>

</selector>